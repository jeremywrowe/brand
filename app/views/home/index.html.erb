<section class="section">
  <div class="container">
    <nav class="level is-mobile is-hidden-desktop">
      <div class="level-item has-text-centered bounceIn">
        <%= render partial: "avatar", locals: { size: '64x64', avatar: @resume_content.avatar } %>
      </div>
    </nav>
    <nav class="level is-mobile">
      <div class="level-item has-text-centered is-hidden-touch bounceIn">
        <%= render partial: "avatar", locals: { size: '128x128', avatar: @resume_content.avatar } %>
      </div>
      <% @resume_content.contact_locations.each do |location| %>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading"><%= location.heading %></p>
            <p class="title">
              <a target="_blank" href="<%= location.link %>">
                <i class="<%= location.icon %>" /></i>
              </a>
            </p>
          </div>
        </div>
      <% end %>
    </nav>
  </div>
</section>

<section class="hero is-medium is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-mobile">
        <div class="column">
          <%= render partial: "tldr" %>
        </div>
      </div>
      <div class="columns is-mobile">
        <div class="column">
          <p>
            <br>
            <%= @resume_content.bio %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section" id="github-section">
  <div class="container has-text-centered">
    <h1 class="title">My Contributions</h1>
    <div id="github-contributions">
      <div class="fa-10x fadeOut">
        <i class="fab fa-github has-text-dark"></i>
      </div>
    </div>
  </div>
</section>

<section class="hero is-medium is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-mobile">
        <div class="column">
          <h1 class="title">
            The nitty gritty
          </h1>
          <h2 class="subtitle has-text-dark">
            (resum√©)
          </h2>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <h1 class="title">Experience</h1>
  <div class="columns is-multiline is-hidden-touch">
    <div class="column has-text-weight-bold">
      Company
    </div>
    <div class="column has-text-weight-bold">
      Duration
    </div>
    <div class="column has-text-weight-bold">
      Role
    </div>
    <div class="column is-half has-text-weight-bold">
      Description
    </div>
  </div>
  <% @resume_content.experiences.each_with_index do |experience, index| %>
    <div class="columns is-multiline <%= index.even? ? 'has-background-white-ter' : nil %>">
      <div class="column">
        <%= experience.company %>
      </div>
      <div class="column">
        <% experience.durations.each do |duration| %>
          <%= content_tag :div, duration %>
        <% end %>
      </div>
      <div class="column">
        <% experience.titles.each do |title| %>
          <%= content_tag :div, title %>
        <% end %>
      </div>
      <div class="column is-half">
        <%= experience.description %>
      </div>
    </div>
  <% end %>
</section>

<section class="section">
  <%= link_to resume_path(format: :pdf), class: 'button is-info is-medium is-pulled-right' do %>
    <i class="far fa-file-pdf"></i>&nbsp;Download Resume
  <% end %>
  <br />
</section>

<script>
  window.onload = function() {
    GitHubCalendar('#github-contributions', '<%= @resume_content.github_username %>');
  }
</script>
